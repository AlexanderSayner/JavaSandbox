<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- to include Spring Boot’s configuration -->
    <!-- <include resource="org/springframework/boot/logging/logback/base.xml"/> -->

    <property name="LOG_PATH" value="logs"/>

    <!-- To Console -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!--                          It is like System.out.print    -->
        <encoder>
            <pattern>%green(%d{HH:mm:ss}) %magenta([%thread]) %highlight(%-5level) %yellow(%logger{15}.%M - %msg%n)
            </pattern>
            <!-- %msg – outputs the actual log message. %n – line break.-->
        </encoder>
    </appender>

    <!-- To Log File -->
    <appender name="SAVE-TO-FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/spring-boot-logging.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{64}.%M - %msg%n
            </Pattern>
        </encoder>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rollover daily and when the file reaches 1 KiloBytes -->
            <FileNamePattern>${LOG_PATH}/archived/spring-boot-logger-%d{yyyy-MM-dd}.%i.log</FileNamePattern>

            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <!-- to error log -->
    <appender name="SAVE-TO-ERROR-FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error-logging.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>
                %d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{64}.%M - %msg%n
            </Pattern>
        </encoder>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Rollover daily and when the file reaches 1 KiloBytes -->
            <FileNamePattern>${LOG_PATH}/archived/error-logger-%d{yyyy-MM-dd}.%i.log</FileNamePattern>

            <timeBasedFileNamingAndTriggeringPolicy
                    class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>10KB</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="SAVE-TO-FILE"/>
        <appender-ref ref="SAVE-TO-ERROR-FILE"/>
    </root>


    <!-- Doesn't work at all -->
    <logger name="sayner.sandbox.controllers" additivity="false" level="debug">
        <appender-ref ref="STDOUT"/>
    </logger>


    <logger name="org.springframework.boot" additivity="false" level="info">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>